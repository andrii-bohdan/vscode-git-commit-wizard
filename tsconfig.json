{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "lib": ["ES6"],
    "moduleResolution": "node16",
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
